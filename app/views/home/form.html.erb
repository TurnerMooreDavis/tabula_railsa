<% if params[:name] %>
  Thanks for submitting the form!  Here are your answers:<br>
  Name: <%= params[:name] %><br>
  <% if ENV['RAILS_ENV']!="development" %>
    Chocolate? <%= params[:chocolate] ? "Yes!" : "No" %><br>
    Rainbows? <%= params[:rainbows] ? "Yes!" : "No" %><br>
    Puppies? <%= params[:puppies] ? "Yes!" : "No" %><br>
    Cold Hard Cash? <%= params[:cash] ? "Yes!" : "No" %><br>
  <% else %>
    Cold Hard Cash? <%= params[:cash] ? "Yes!" : "No" %><br>
  <% end %>
<% else %>
  <%= form_tag home_form_path do %>
    <div>
      Name: <%= text_field_tag :name %>
    </div>
    <div>
      Favorites:<br>
      <%= check_box_tag :chocolate %> Chocolate<br>
      <%= check_box_tag :rainbows %> Rainbows<br>
      <%= check_box_tag :puppies %> Puppies<br>
      <%= check_box_tag :cold_hard_cash %> Cold Hard Cash<br>
    </div>
    <%= submit_tag "Save", data: { confirm: "Are you sure?" }%>
  <% end %>
<% end %>
